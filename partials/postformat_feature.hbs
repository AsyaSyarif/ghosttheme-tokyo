{{!

    POST FORMAT - FEATURE
    - Configuration of this file is not required.

}}

    <article class="post feature">
        <a href="{{url}}" class="largeimage postfeature" {{#if feature_image}} style="background-image: url({{img_url feature_image}})" {{/if}}>
        </a>
        <h1>{{{title}}}</h1>
        <div class="postcontents index">
            {{content words="150"}}
        </div>
        <div class="footer">
            <div class="left">
            <a href="{{url}}" class="date"><i class="far fa-calendar-alt"></i>{{date format="MMMM Do, YYYY"}}</a>
                <span class="tags">

                    {{#foreach tags}}
                        <a href="{{url}}"><i class="fa fa-tags"></i> {{name}}</a>
                    {{/foreach}}
                </span>
                {{!-- {{#if author.profile_image}}<img src="{{author.profile_image}}" alt="author" class="minigravatar">{{/if}}
                {{author}} --}}
            </div>
            <a href="{{url}}" class="largesolid orange">Read</a>
        </div>
    </article>

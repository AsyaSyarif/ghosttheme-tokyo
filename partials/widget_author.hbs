{{!

    WIDGET - AUTHOR
    - Configuration of this file is not required.

}}

    <div class="widget author_widget {{post_class}}">
      <div class="author-container">
          {{#if author.profile_image}}
              <a class="avatar" href="/about/"><img src="{{author.profile_image}}" class="gravatar" alt="{{author.name}}"></a>
          {{/if}}
          <div class="details">
            <h3><a href="/about/">Todd Birchard</a></h3>
            <span class="title">Application Architect</span>
            <span class="location">{{author.location}}</span>
            <!--<a href="{{author.website}}" class="author_url"><i class="fal fa-link"></i> About me</a>-->
          </div>
      </div>
        <p>{{author.bio}}</p>
    </div>
